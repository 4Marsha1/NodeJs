<!DOCTYPE html>
<html lang="en">

<%- include('./partials/head.ejs') %>

<body>
    <%- include('./partials/nav.ejs') %>

    <div class="content">
        <div class="blogs">
            <% if(blogs.length>0) { %>
                <% blogs.forEach(blog => { %>
                    <a href='/blogs/<%= blog._id %>' >
                        <div class="blog">
                            <span><%= blog.title%> </span>
                            <span><%= blog.snippet%> </span>
                        </div>
                    </a>
                <%})%>
            <%}%>
        </div>
    </div>

    <%- include('./partials/footer.ejs')%>
</body>
</html>